# AyurMind Backend Environment Configuration
# Based on Classical Ayurvedic Texts: Charaka Samhita, Sushruta Samhita, Ashtanga Hridayam

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ayurmind

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Classical Knowledge Base Configuration
ENABLE_CLASSICAL_REFERENCES=true
ENABLE_SANSKRIT_VERSES=true
ENABLE_IAST_TRANSLITERATION=true

# Assessment Configuration
ASSESSMENT_VERSION=1.0.0
CONFIDENCE_THRESHOLD=70
MIN_QUESTIONS_REQUIRED=20

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# API Documentation
ENABLE_SWAGGER=true
API_DOCS_PATH=/api-docs 